<div class="text-center">
	<ul class="pagination">
	  {% for page in pages %}
        {% if page.current %}
        	{% if page.number == 1 %}
        		<li class="disabled"><a href="#">&laquo;</a></li>
        	{% else %}
				<li><a href="{{url('page',{nb:page.number-1})}}">&laquo;</a></li>
			{% endif %}
        {% endif %}
    {% endfor %}
    {% for page in pages %}
        {% if page.current %}
        	<li class="active"><a href="#">{{page.number}}</a></li>      
        {% else %}
        	<li><a href="{{url('page',{nb:page.number})}}">{{page.number}}</a></li>
        	{{page.current}}
        {% endif %}
    {% endfor %}

	{% for page in pages %}
        {% if page.current %}
        	{% if pages|length == page.number %}
        		<li class="disabled"><a href="#">&raquo;</a></li>
        	{% else %}
				<li><a href="{{url('page',{nb:page.number+1})}}">&raquo;</a></li>
			{% endif %}
        {% endif %}
    {% endfor %}
	</ul>
</div>