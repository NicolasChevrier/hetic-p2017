{{include('inc/message.twig')}}

<div class="admin row">
  {{include('admin/menu.twig')}}
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <form class="form-horizontal" method="POST">
          <fieldset>
            <div class="col-xs-12">
              <div class="form-group">
                <h4>Update snippet</h4>
                <input type="hidden" name="id" value="{{snippet.id}}">
                <label for="inputTitle" class="control-label">Title</label>
                <input type="text" class="form-control" id="inputTitle" placeholder="Title" name="title" value="{{snippet.title}}">
              </div>
              <div class="form-group">
                <label for="code" class="control-label">Content</label>
                <textarea class="form-control" rows="3" id="code" placeholder="Content" name="content">{{snippet.content}}</textarea>
              </div>
              <div class="form-group">
                <label for="select" class="col-xs-12 control-label" style="text-align:left; padding-left:0;">Category</label>
                <div class="col-xs-4" style="padding-left:0;">
                  <select class="form-control" id="select" name="category">
                    {% for category in categories %}
                    <option value="{{category.id}}" {% if snippet.category_slug == category.slug %}selected{% endif %}>{{category.title}}</option>
                    {% endfor %}
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

