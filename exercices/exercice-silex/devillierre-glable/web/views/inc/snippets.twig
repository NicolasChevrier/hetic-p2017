<div class="row">
{% for snippet in snippets %}
  <div class="col-sm-6 col-md-6">
    <div class="thumbnail">
      
      <div class="caption">
        <h3>{{snippet.title}}</h3>
        <p>{{snippet.content}}</p>
        <a class="btn btn-primary" href="{{url('category',{category:snippet.category_slug})}}">{{snippet.category_title}}</a>
        </div>
    </div>
  </div>
  {% endfor %}
</div>

