{% extends 'incs/layout.twig' %}

{% block top %}
	<div class="container">
		<h1>Inscription</h1>
		<p>Bienvenue sur snippet style, édites, crée, partages ici tes snippets</p>
	</div>
{% endblock %}

{% block container %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<form role="form" action="{{url ('createuser')}}" method="post">
			  <div class="form-group">
			    <label for="exampleInputEmail1">Username</label>
			    <input type="text" class="form-control" placeholder="Enter Username" name="username">
			  </div>

			  <div class="form-group">
			    <label for="exampleInputEmail1">Mail</label>
			    <input type="text" class="form-control" placeholder="Enter Mail" name="mail">
			  </div>

			  <div class="form-group">
			    <label for="exampleInputEmail1">Password</label>
			    <input type="password" class="form-control" placeholder="Enter Password" name="password">
			  </div>
			  
			  <button type="submit" class="btn btn-default">Submit</button>
			</form>
		</div>
	</div>
{% endblock %}