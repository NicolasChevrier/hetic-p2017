{% extends 'incs/layout.twig' %}

{% block top %}
  <div class="container">
    <h1>Ajout d'un Snippet</h1>
    <p>Choisissez le language du snippet, donnez lui un titre et Ã©ditez le !</p>
  </div>
{% endblock %}

{% block container %}
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form action="{{url('createsnippet')}}" method="post">
        <div class="form-group">
          <label for="cat">Categorie</label>
          <select name="category" class="form-control" id="cat">
          {% for category in categories %}
              <option value="{{category.id}}">{{category.title}}</option>
          {% endfor %}
          </select>
        </div>

        <div class="form-group">
          <label for="title">Titre</label>
          <input type="text" class="form-control" placeholder="Nom du snippet" name="title" id="title">
        </div>  

        <div class="form-group">
          <label for="content">Snippet</label>
          <textarea name="content" id="content" cols="30" rows="10"  class="form-control" id="content"></textarea>
        </div>  
        
        <button type="submit" class="btn btn-default">Envoyer</button>
      </form>
    </div>
  </div>
{% endblock %}

