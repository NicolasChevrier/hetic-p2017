{% block container %}
	<div class="row">
		{% for cat in categories %}
			<div class="col-md-3 text-center">
	            <h2>{{cat.title}}</h2>
	            <p><img src="{{app.request.basePath}}/assets/images/{{cat.img}}" style="width: 140px; height: 140px;"></p>
	            <p><a class="btn btn-danger" href="{{url('category', {category: cat.slug, id: 1})}}" role="button">Voir les Snippets </a></p>
	        </div>	
		{% endfor %}
    </div>
{% endblock %}