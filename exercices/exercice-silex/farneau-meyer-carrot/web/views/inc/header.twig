<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sticky Footer Navbar Template for Bootstrap</title>

    <link href="{{app.request.basepath}}/src/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{app.request.basepath}}/src/css/sticky-footer-navbar.css" rel="stylesheet">

    <script src="{{app.request.basepath}}/src/js/ie-emulation-modes-warning.js"></script>
    <script src="{{app.request.basepath}}/src/js/ie10-viewport-bug-workaround.js"></script>

    <!-- HIGHLIGHT -->
    <script src="{{app.request.basepath}}/src/js/highlight.pack.js"></script>
    <link rel="stylesheet" href="{{app.request.basepath}}/src/css/highlight.default.css">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{path('home')}}">Snippets</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li {% if(actualPage.page=='home') %}class="active"{% endif %}><a href="{{path('home')}}">Home</a></li>
            <li class="dropdown {% if(actualPage.page=='category') %}active{% endif %}">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <span class="caret"></span></a>
              <ul class="dropdown-menu">
                 <li {% if(actualPage.page=='category' and actualPage.category=="all") %}class="active"{% endif %}><a href="{{path('category',{category:"all"})}}">All</a></li>
                      <li class="divider"></li>

                {% for category in categories %}
                  <li {% if(actualPage.page=='category' and actualPage.category==category.slug) %}class="active"{% endif %}><a href="{{path('category',{category:category.slug})}}">{{category.title}}</a></li>
                {% endfor %}
              </ul>
            </li>
            <li {% if(actualPage.page=='about') %}class="active"{% endif %}><a href="{{path('about')}}">About</a>
            <li {% if(actualPage.page=='contact') %}class="active"{% endif %}><a href="{{path('contact')}}">Contact</a>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- Begin page content -->
    <div class="container">